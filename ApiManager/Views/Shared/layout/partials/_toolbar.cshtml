@{
	var pageName = ViewContext.RouteData.Values["controller"].ToString();
}

<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar pt-6 pb-3 pt-lg-12 pb-lg-6">
	<!--begin::Toolbar container-->
	<div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
		<!--layout-partial:layout/partials/_page-title.html-->
		@await Component.InvokeAsync("PageTitle",
			new {
				title = ViewData["Title"],
				pageName = pageName
			})
	</div>
	<!--end::Toolbar container-->
</div>
<!--end::Toolbar-->